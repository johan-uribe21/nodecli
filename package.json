{
  "name": "nodecli",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">= 12.13 <13"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node ./build/src/main.js",
    "go": "tsc -p tsconfig.release.json; node ./build/src/main.js"
  },
  "devDependencies": {
    "@types/jest": "~25.1.2",
    "@types/node": "~12.12.27",
    "@types/clear": "^0.1.0",
    "@types/clui": "^0.3.0",
    "@types/configstore": "^4.0.0",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/lodash": "^4.14.149",
    "@types/touch": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@types/minimist": "^1.2.0",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "~6.10.0",
    "eslint-plugin-jest": "~23.7.0",
    "jest": "~25.1.0",
    "prettier": "~1.19.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~25.2.0",
    "tsutils": "~3.17.0",
    "typescript": "~3.8.2"
  },
  "dependencies": {
    "@octokit/auth-basic": "^1.4.1",
    "@octokit/rest": "^17.0.0",
    "chalk": "^3.0.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "common-js": "^0.3.8",
    "configstore": "^5.0.1",
    "core-util-is": "^1.0.2",
    "figlet": "^1.3.0",
    "inquirer": "^7.0.4",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "simple-git": "^1.131.0",
    "touch": "^3.1.0",
    "tslib": "~1.10.0"
  }
}
